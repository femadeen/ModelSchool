@model ModelSchool.Models.Entities.Student

@{
    ViewBag.Title = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-center">
                <h2>Register</h2>
                @ViewBag.Message
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group mb-3">
                        <label>First Name</label>
                        @Html.TextBoxFor(f => f.FirstName, new { @class = "form-control" })
                    </div>
                    <div class="form-group mb-3">
                        <label>Last Name</label>
                        @Html.TextBoxFor(l => l.LastName, new { @class = "form-control" })
                    </div>
                    <div class="form-group mb-3">
                        <label>Age</label>
                        @Html.TextBoxFor(a=> a.Age, new { @class = "form-control" })
                    </div>
                    <div class="form-group mb-3">
                        <label>password</label>
                        @Html.TextBoxFor(p => p.Password, new { @class = "form-control" })
                    </div>
                    <div class="form-group mb-3">
                        <label>Address</label>
                        @Html.TextBoxFor(a => a.Address, new { @class = "form-control" })
                    </div>
                    <div class="form-group mb-3">
                        <label>Department</label>
                        @Html.TextBoxFor(d => d.Department, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Register</button>
                }
            </div>
        </div>
    </div>
</div>
